<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults public="false" />

        <service id="symfony.live.subscriber_controller" class="Symfony\Component\Live\Controller\SubscriberController">
            <argument type="service" id="messenger.transport.live" />
            <argument type="service" id="fragment.renderer.inline" />

            <tag name="controller.service_arguments" />
        </service>

        <service id="symfony.live.inject_subscriber_listener" class="Symfony\Component\Live\EventListener\InjectSubscriberJavaScriptListener">
            <argument type="service" id="twig" />

            <tag name="kernel.event_subscriber" />
        </service>

        <service id="symfony.live.live_view_update_handler" class="Symfony\Component\Live\MessageHandler\LiveViewUpdateHandler">
            <tag name="messenger.message_handler" />
        </service>

        <service id="symfony.live.twig_extension" class="Symfony\Component\Live\Twig\LiveExtension">
            <argument type="service" id="symfony.live.inject_subscriber_listener" />
            <argument type="service" id="request_stack" />

            <tag name="twig.extension" />
        </service>
    </services>
</container>
